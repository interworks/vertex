            <h2>Stack trace:</h2>
            <pre style="overflow:auto;"><?= $this->escape($this->exception->getTraceAsString()) ?>
            </pre>

            <h2>Request Parameters:</h2>
            <pre><?= $this->escape(print_r($this->request->getParams(), true)) ?>
            </pre>
        <? endif; ?>
    </div>
</section>