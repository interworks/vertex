$this->pageTitle = 'Error';

?>
<section class="site-section" id="section-top">
    <div class="site-section-contents">
        <p>We're sorry, but an unrecoverable error was encountered while processing your request.</p>
        <p><em><?= $this->escape($this->message) ?></em></p>
        
